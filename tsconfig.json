{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",  // ✅ Compile only "src/"
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/utils/*"]
    },
    "declaration": true,  // ✅ Generates `.d.ts` files
    "declarationDir": "dist",  // ✅ Saves `.d.ts` files inside `dist/`
    "emitDeclarationOnly": false  // ✅ Ensures `.js` and `.d.ts` are both generated
  },
  "include": ["src", "src/constants/numberConstants.ts"]  // ✅ Compile only "src/", exclude "tests"
}

{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": ".",  // Change from "src" to "."
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src", "tests"]  // Add "tests" folder
}
